<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/comic_detail_main_wrapper">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/comic_detail_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

        <TextView
            android:id="@+id/comic_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title" />

        <TextView
            android:id="@+id/comic_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date" />

        <LinearLayout
            android:id="@+id/comic_detail_creators_wrapper"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"/>

        <TextView
            android:id="@+id/comic_detail_diamond_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="diamondCode" />

    </LinearLayout>
</ScrollView>